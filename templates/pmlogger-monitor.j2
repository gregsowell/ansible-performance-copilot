{% if config_via_host %}
log advisory on every 1 minute {
    {{ hostvars[item].ansible_host }} n n PCP_LOG_DIR/pmlogger/{{ item }} -r -T24h10m -c config.default
}
{% else %}
log advisory on every 1 minute {
    {{ item }} n n PCP_LOG_DIR/pmlogger/{{ item }} -r -T24h10m -c config.default
}
{% endif %}